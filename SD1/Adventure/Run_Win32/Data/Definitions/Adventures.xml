<?xml version="1.0" encoding="utf-8"?>
<AdventureDefinitions>

  <AdventureDefinition name="Orc" title="Kill the Orc">
    <StartCondition startMap="The Village" onTileType="Grass"/>
    <VictoryCondition haveDied="Orc"/>
    <Dialogue>
      <Start text="You must defeat the Orc nestled deep within the Temple of Evil!" bounds="0.0,0.0,1.0,0.4" style="Progressive" />
      <Victory text="You have successfully finished the Adventure!" bounds="0.0,0.0,1.0,0.4" style="Progressive" />
      <Defeat text="You have died..." bounds="0.0,0.0,1.0,0.4" style="Progressive" />
    </Dialogue>
    <Map name="The Village" mapDefinition="Village">
      <Portal type="StairsDown" onTileType="Grass" toMap="Upper Crypt"
                  toTileType="StoneFloor" reciprocalType="StairsUp"/>
      <Item type="Fire Tome" onTileType="StoneFloor" />
      <Item type="Lightning Tome" onTileType="StoneFloor" />
      <Item type="Ice Tome" onTileType="StoneFloor" />
      <Item type="Poison Tome" onTileType="StoneFloor" />
      <Actor type="Mercenary" onTileType="StoneFloor" />
    </Map>
    <Map name="Upper Crypt" mapDefinition="Crypt">
      <Portal type="StairsDown" onTileType="StoneFloor" toMap="Lower Crypt"
                  toTileType="StoneFloor" reciprocalType="StairsUp"/>
    </Map>
    <Map name="Lower Crypt" mapDefinition="Crypt">
      <Portal type="TeleportVortex" toMap="Temple of Evil" reciprocalType="TeleportVortex"/>
    </Map>
    <Map name="Temple of Evil" mapDefinition="DungeonTemple">
      <Actor type="Orc" onTileType="Altar"/>
    </Map>
  </AdventureDefinition>

