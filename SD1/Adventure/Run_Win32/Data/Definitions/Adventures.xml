      <Item type="Bow" onTileType="Sand" />
      <Item type="Scout Helmet" onTileType="Sand" />
      <Item type="Iron Armor" onTileType="Sand" />
      <Item type="Agile Boots" onTileType="Sand" />
      <Item type="Poison Tome" onTileType="Sand" />
      <Item type="Lightning Tome" onTileType="Sand" />
      <Item type="Herb" onTileType="Sand" />
      <Item type="Herb" onTileType="Sand" />
      <Item type="Herb" onTileType="Sand" />
      <Actor type="Mercenary" onTileType="Sand"/>
      <Actor type="Mercenary" onTileType="Sand"/>
      <Actor type="Mercenary" onTileType="Sand"/>
      <Actor type="Mercenary" onTileType="Sand"/>
    </Map>
  </AdventureDefinition>

  <AdventureDefinition name="Ice World" title="Kill all Dark Elves">
    <StartCondition startMap="The Cave" onTileType="Snow"/>
    <VictoryCondition haveDied="Dark Elf"/>
    <VictoryCondition haveDied="Dark Elf"/>
    <VictoryCondition haveDied="Dark Elf"/>
    <VictoryCondition haveDied="Dark Elf"/>
    <Map name="The Cave" mapDefinition="IceCave">
      <Item type="Scout Helmet" onTileType="Snow" />
      <Item type="Iron Armor" onTileType="Snow" />
      <Item type="Dexterous Boots" onTileType="Snow" />
      <Item type="Ice Tome" onTileType="Ice" />
      <Item type="Fire Tome" onTileType="Ice" />
      <Item type="Ice Tome" onTileType="Snow" />
      <Item type="Fire Tome" onTileType="Snow" />
      <Item type="Herb" onTileType="Snow" />
      <Item type="Herb" onTileType="Snow" />
      <Item type="Herb" onTileType="Snow" />
      <Actor type="Dark Elf" onTileType="Ice"/>
